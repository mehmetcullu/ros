<?xml version="1.0"?>
<robot name="bot" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find bot_description)/urdf/bot_gazebo.xacro" />
  <xacro:include filename="$(find bot_description)/urdf/bot_control.xacro" />

  <link name="base_footprint"/>
  
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <origin xyz="0 0 0.033" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.04" rpy="0.0 0.25 0.3" />
      <mass value="0.8257"/>
      <inertia ixx="0.0221" ixy="-0.0001" ixz="0.0003" iyy="0.0211" iyz="-0.00005" izz="0.0200" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://bot_description/meshes/base_link.STL" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://bot_description/meshes/base_link.STL" />
      </geometry>
    </collision>
  </link>

  <link name="wheel_right_link">
    <inertial>
      <origin xyz="0 -0.014 0" rpy="0 0 0" />
      <mass value="0.053" />
      <inertia ixx="1.88e-05" ixy="0" ixz="0" iyy="3.11e-05" iyz="0" izz="1.88e-05" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0" />
      <geometry>
        <mesh filename="package://bot_description/meshes/wheel_right_link.STL" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 -0.015 0" rpy="1.5707 0 0" />
      <geometry>
        <sphere radius="0.033"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <origin xyz="0 -0.0701 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="wheel_right_link" />
    <axis xyz="0 1 0" />
  </joint>
  
  <link name="wheel_left_link">
    <inertial>
      <origin xyz="0 0.014 0" rpy="0 0 0" />
      <mass value="0.053" />
      <inertia ixx="1.87e-05" ixy="0" ixz="0" iyy="3.11e-05" iyz="0" izz="1.88e-05" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="-1.5707 0 0" />
      <geometry>
        <mesh filename="package://bot_description/meshes/wheel_left_link.STL" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0.015 0" rpy="-1.5707 0 0" />
      <geometry>
        <sphere radius="0.033"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <origin xyz="0 0.0701 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="wheel_left_link" />
    <axis xyz="0 1 0" />
  </joint>

  <link name="caster_front_link">
    <visual>
      <geometry><mesh filename="package://bot_description/meshes/caster_front_link.STL" /></geometry>
    </visual>
    <collision>
      <geometry><sphere radius="0.005"/></geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>

  <joint name="caster_front_joint" type="fixed">
    <origin xyz="0.04755 0 -0.0275" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="caster_front_link" />
  </joint>

  <link name="imu_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.001" />
      <inertia ixx="1e-7" ixy="0" ixz="0" iyy="1e-7" iyz="0" izz="1e-7" />
    </inertial>
    <visual>
      <geometry><mesh filename="package://bot_description/meshes/imu_link.STL" scale="1.0"/></geometry>
    </visual>
    <collision>
      <geometry><mesh filename="package://bot_description/meshes/imu_link.STL" scale="1.0"/></geometry>
    </collision>
  </link>

  <joint name="imu_joint" type="fixed">
    <origin xyz="0 0 0.0698" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="imu_link" />
  </joint>

</robot>